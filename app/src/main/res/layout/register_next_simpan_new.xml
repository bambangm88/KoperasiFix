<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbg"
    tools:context=".Auth.Login">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_pay"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@drawable/gradientbg"
            android:theme="@style/mytoolbar"
            app:elevation="4dp"
            app:popupTheme="@style/Base.Theme.AppCompat.Light.DarkActionBar">

            <TextView
                android:textAlignment="center"
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="REGISTRASI DATA INFO"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>





    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorWhite"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="Nama"
                            android:textColor="@color/white" />

                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text=""
                            android:id="@+id/nama"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text="Jenis Kelamin"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text=""
                            android:id="@+id/jk"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text="Agama"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text=""
                            android:id="@+id/agama"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text="Tempat Lahir"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text=""
                            android:id="@+id/tl"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text="Tanggal Lahir"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text=""
                            android:id="@+id/ttl"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text="Alamat"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text=""
                            android:id="@+id/alamat"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/cardnewperiod"
                        android:layout_marginTop="3dp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text="New Period"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text=""
                            android:id="@+id/tvnewperiod"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>




                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text="No Hp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text=""
                            android:id="@+id/phone"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Switch
                            android:visibility="gone"
                            android:id="@+id/swnewperiod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:text="download new period" />

                    </RelativeLayout>





                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:text="Perusahaan"
                    android:textColor="@color/colorUtama" />

                <Spinner
                    android:id="@+id/spCompany"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/spinner"
                    android:spinnerMode="dialog" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Email"
                    android:textColor="@color/colorUtama" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_edittext_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp">


                    <com.rsah.koperasi.customfonts.EditTextSFProDisplayRegular
                        android:id="@+id/et_email"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/countrycode"
                        android:background="@color/transparent"
                        android:hint="email"
                        android:text=""
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="15dp" />



                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:text="Password"
                    android:textColor="@color/colorUtama" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_edittext_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp">


                    <com.rsah.koperasi.customfonts.EditTextSFProDisplayRegular
                        android:id="@+id/et_pwd"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/countrycode"
                        android:background="@color/transparent"
                        android:hint="password"
                        android:text=""
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textSize="15dp" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_id_card"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/upload"
                            android:id="@+id/iv_id_card"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                        <TextView
                            android:textColor="@color/colorUtama"
                            android:textAlignment="center"
                            android:text="FOTO ID CARD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_pribadi"
                        android:layout_marginLeft="25dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/upload"
                            android:id="@+id/iv_pribadi"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            />

                        <TextView
                            android:textColor="@color/colorUtama"
                            android:textAlignment="center"
                            android:text="FOTO SELFIE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>




                <Button
                    android:id="@+id/btn_reg"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/gradientbg"
                    android:text="REGISTER"
                    android:textColor="#fff"
                    android:textStyle="bold" />


            </LinearLayout>


        </ScrollView>

    </androidx.cardview.widget.CardView>



    <include layout="@layout/progress_loading"/>



</RelativeLayout>