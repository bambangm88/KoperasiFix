<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbg"
    tools:context=".Auth.Login">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_pay"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@drawable/gradientbg"
            android:theme="@style/mytoolbar"
            app:elevation="4dp"
            app:popupTheme="@style/Base.Theme.AppCompat.Light.DarkActionBar">

            <TextView
                android:textAlignment="center"
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="REGISTER"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorWhite"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorUtama"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:text="ID CARD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <EditText
                    android:textSize="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:hint="ID CARD"
                    android:id="@+id/et_id_card"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>


                <TextView
                    android:textColor="@color/colorUtama"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Firstname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <EditText
                    android:textSize="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Firstname"
                    android:id="@+id/et_Firstname"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>


                <TextView
                    android:textColor="@color/colorUtama"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Jenis Kelamin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <Spinner
                    android:id="@+id/spJenisKelamin"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/spinner"
                    android:spinnerMode="dialog"/>


                <TextView
                    android:textColor="@color/colorUtama"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Agama"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


                <Spinner
                    android:id="@+id/spAgama"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/spinner"
                    android:spinnerMode="dialog"/>

                <TextView
                    android:textColor="@color/colorUtama"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Tempat Lahir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <EditText

                    android:textSize="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Tempat Lahir"
                    android:id="@+id/et_tpt_lahir"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>


                <TextView
                    android:textColor="@color/colorUtama"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Tanggal Lahir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <EditText
                    android:editable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:textSize="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Tanggal Lahir"
                    android:id="@+id/et_tgl_lahir"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>


                <Button
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="40dp"
                    android:text="NEXT >>"
                    android:background="@drawable/gradientbg"
                    android:id="@+id/btn_next"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>


            </LinearLayout>



    </ScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>